<h1>New game</h1>
<ul class="letters">
  <% @letters.each do |letter| %>
    <li class="letter"><%= letter %></li>
  <% end %>
</ul>
<form action="/score" method="post">
  <p>What's the longest word you can find?</p>
  <input class="word-input" type="text" name="word">
  <input class="submit-word" type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>